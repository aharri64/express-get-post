<h2>Here's all my dinosaurs</h2>
<!-- This is create a filtering form, this comes from the first /dinosaurs get route with the if statememt-->
<form method="GET" action="/dinosaurs">
    <label for="nameFilter">Filter by Name</label>
    <input id="nameFilter" type="text" name="nameFilter">
    <input type="submit">
</form>

<ul>
    <% for (let idx = 0; idx < dinos.length; idx++) { %>
        <% let dino = dinos[idx] %>
        <p><%= dino.name %></p>
        <p><%= dino.type %></p>
        <form method="POST" action="/dinosaurs/<%= idx %>?_method=DELETE" >
            <button type="submit">DELETE</button>
        </form>
        <form method="POST" action="/dinosaurs/edit/<%= idx %>" >
            <button type="submit">Edit</button>
        </form>
    <% } %>

</ul>

<form action="/dinosaurs/new" method="get">
    <button type="submit">Add New Dino</button>
</form>

<form action="/dinosaurs" method="get">
    <button type="submit">Back to All Dinos</button>
</form>